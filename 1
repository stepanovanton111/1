import math

def calculate_triangle_properties(a):
    # Площадь равностороннего треугольника
    area = (math.sqrt(3) / 4) * (a ** 2)
    
    # Радиус описанной окружности
    R = a / math.sqrt(3)
    
    # Радиус вписанной окружности
    r = (a * math.sqrt(3)) / 6
    
    return area, R, r

# Ввод стороны треугольника
a = float(input("Введите длину стороны равностороннего треугольника: "))

# Вычисление свойств треугольника
area, R, r = calculate_triangle_properties(a)

# Вывод результатов
print(f"Площадь равностороннего треугольника: {area:.2f}")
print(f"Радиус описанной окружности: {R:.2f}")
print(f"Радиус вписанной окружности: {r:.2f}")
